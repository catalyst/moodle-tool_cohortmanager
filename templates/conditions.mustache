{{!
    @template tool_cohortmanager/addrulebutton

    Button to add a new rule.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * url - URL of edit page.

    Example context (json):
    {
        "conditions" : "conditions"
    }
}}

<div class="tool-cohortmanager-conditions p-3">
    <div id="tool-cohortmanager-not-saved" class="hidden alert alert-warning">{{# str }} conditionchnagesnotapplied, tool_cohortmanager {{/ str }}</div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">{{# str }} name {{/ str }}</th>
            <th scope="col">{{# str }} description {{/ str }}</th>
            <th scope="col">{{# str }} actions {{/ str }}</th>
        </tr>
        </thead>
        <tbody>
        {{#conditions}}
            <tr>
                <td>{{{name}}}</td>
                <td>{{{description}}}</td>
                <td>
                    <span class="tool-cohortmanager-condition-edit" data-position="{{position}}">{{# pix }} t/edit, core, {{# str }} edit {{/ str }} {{/ pix }}</span>
                    <span class="tool-cohortmanager-condition-delete" data-position="{{position}}">{{# pix }} t/delete, core, {{# str }} delete {{/ str }} {{/ pix }}</span>
                </td>
            </tr>
        {{/conditions}}
        </tbody>
    </table>
</div>

